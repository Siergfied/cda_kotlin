<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/label_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/input_name"
        android:text="Please enter your Name"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:autofillHints="" />

    <TextView
        android:id="@+id/label_occupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/input_occupation"
        android:text="Please enter your Occupation"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/input_occupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:autofillHints="" />

    <TextView
        android:id="@+id/label_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/input_company"
        android:text="Please enter your Company"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/input_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:autofillHints="" />

    <Button
        android:id="@+id/start_second_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:ignore="HardcodedText" />

</LinearLayout>
